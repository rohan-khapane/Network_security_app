<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradint_color"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:background="@color/c1_dark"

            app:titleTextColor="@color/white"
            android:layout_gravity="center"
            >

        </androidx.appcompat.widget.Toolbar>
<!--        <include layout="@layout/content_main.xml"/>-->

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab"

        app:tabMode="fixed"
        app:tabGravity="center"
        app:tabIndicatorGravity="stretch"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorAnimationMode="elastic"
        app:tabBackground="@drawable/tab_selector"
        app:tabIndicator="@drawable/tab_selector"
        android:background="@drawable/tab_indicator"
        app:tabIndicatorColor="@color/c2_medium"

        app:tabTextColor="@color/white"
        />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager"
        android:background="@color/c5_sky_light"

        />

    </com.google.android.material.appbar.AppBarLayout>


</LinearLayout>